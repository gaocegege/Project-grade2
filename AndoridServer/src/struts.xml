<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">   
<struts>
	<!-- class的交给spring管理-->
	<constant name="struts.objectFactory" value="spring"></constant>
	<constant name="struts.i18n.encoding" value="utf-8"></constant>
	<package name="bookstore" extends="struts-default,json-default">
		<action name="test" class="TestAction">
			<result type="json"></result>
		</action>
		
		<action name="spider" class="spiderAction">
			<result type="json"></result>
		</action>
		
		<action name="getList" class="getListAction">
			<result type="json"></result>
		</action>
		<action name="getSearchPage" class="getSearchPage">
			<result type="json"></result>
		</action>
		<action name="getBaiduList" class="getBaiduList">
			<result type="json"></result>
		</action>
		<action name="getNewsContent" class="getNewsContent">
			<result type="json"></result>
		</action>
		<action name="getSecondaryList" class="getSecondaryList">
			<result type="json"></result>
		</action>
		<action name="getSimilarNews" class="getSimilarNews">
			<result type="json"></result>
		</action>
		<action name="getSimilarNews2" class="getSimilarNews2">
			<result type="json"></result>
		</action>
		<action name="getSum" class="getSumAction">
			<result type="json"></result>
		</action>
		<action name="getLocationAction" class="getLocationAction">
			<result type="json"></result>
		</action>
	</package>
</struts>