<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="Domain.NewsContent" table="newscontent">
		<id name="id" column="id">  
                <generator class="foreign"><!--使用主键关联，引用Member对应表的主键作为自己的主键-->   
                    <param name="property">content</param><!--此处的member必须和下面配置的one-to-one的name属性一样 -->   
                </generator>  
        </id>  
		
		<property
			name="contents"
			column="contents"
			update="true"
			insert="true"
			not-null="true"
			type="java.lang.String"
			length="2000"
		></property>
		
		<one-to-one name="content" class="Content" constrained="true"></one-to-one>
	</class>
</hibernate-mapping>