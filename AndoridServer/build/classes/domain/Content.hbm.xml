<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="Domain.Content" table="content">
		<id 
			name="id" 
			column="id"
			type="int"
		></id>
		
		<property
			name="img"
			column="img"
			update="true"
			insert="true"
			type="java.lang.String"
			length="50"
		></property>
		
		<property
			name="keywords"
			column="keywords"
			update="true"
			insert="true"
			type="java.lang.String"
			length="50"
		></property>
		
		<property
			name="from"
			column="m_from"
			update="true"
			insert="true"
			type="java.lang.String"
			length="20"
		></property>
		
		<property
			name="time"
			column="time"
			update="true"
			insert="true"
			type="java.lang.String"
			length="30"
		></property>
		
		<property
			name="count"
			column="count"
			update="true"
			insert="true"
			type="int"
		></property>
		
		<property
			name="title"
			column="title"
			update="true"
			insert="true"
			type="java.lang.String"
			length="100"
		></property>
		
	</class>
</hibernate-mapping>